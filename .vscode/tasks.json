{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build All",
			"type": "shell",
			"command": "${workspaceFolder}/scripts/build.bat",
			"problemMatcher": []
		},
		{
			"label": "Build Main",
			"type": "shell",
			"command": "${workspaceFolder}/projects/main/build.bat",
			"problemMatcher": []
		},
		{
			"label": "Run Latest",
			"type": "shell",
			"command": "${workspaceFolder}/scripts/run.bat",
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "Build Settings",
			"type": "shell",
			"command": "${workspaceFolder}/projects/settings_menu/build.bat",
			"problemMatcher": []
		},
		{
			"label": "Build Flappy Bird",
			"type": "shell",
			"command": "${workspaceFolder}/projects/flappy_bird_clone/build.bat",
			"problemMatcher": []
		},
		{
			"label": "Run Flappy Bird Tests",
			"type": "shell",
			"command": "${workspaceFolder}/projects/flappy_bird_clone/run_tests.bat",
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		},
		{
			"label": "Run Godot Game",
			"type": "shell",
			"command": "uv run c:/GithubRepos/Test/run-godot-game.py",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Parse Godot Scene",
			"type": "shell",
			"command": "uv",
			"args": [
				"run",
				"parse-godot-scene/parse_godot_scene.py",
				"${fileDirname}"
			],
			"options": {
				"cwd": "C:\\GithubRepos\\GodotHelpers"
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		}
	]
}